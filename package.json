{
    "name": "@leemillward/stylelint-config",
    "version": "2.0.0",
    "description": "Shareable Stylelint config",
    "keywords": [
        "stylelint",
        "stylelint-config",
        "standard"
    ],
    "author": "Lee Millward",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/leemillward/stylelint-config"
    },
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "dependencies": {
        "stylelint-order": "^4.1.0",
        "stylelint-scss": "^3.20.1"
    },
    "devDependencies": {
        "@leemillward/eslint-config": "2.0.2",
        "eslint": "7.32.0",
        "jest": "27.4.7",
        "npm-run-all": "4.1.5",
        "remark-cli": "10.0.1",
        "remark-preset-lint-recommended": "6.1.2",
        "stylelint": "13.13.1",
        "stylelint-find-new-rules": "3.0.4"
    },
    "peerDependencies": {
        "stylelint": "^13.13.1"
    },
    "scripts": {
        "lint:js": "eslint . --ignore-path .gitignore",
        "lint:md": "remark . --quiet --frail",
        "lint": "npm-run-all --parallel lint:*",
        "pretest": "npm run stylelint-find-unused-deprecated-rules && npm run lint",
        "test": "jest",
        "stylelint-find-rules": "stylelint-find-new-rules index.js",
        "stylelint-find-unused-deprecated-rules": "stylelint-find-new-rules --no-u index.js",
        "watch": "jest --watch"
    },
    "jest": {
        "testEnvironment": "node",
        "verbose": true
    },
    "remarkConfig": {
        "plugins": [
            "preset-lint-recommended"
        ]
    }
}
